{
    "exp": {
      "name": "reg_qzp_bbh"
    },
    "data_loader": {
      "name": "UMAPDataLoader",
      "args": {},
      "data_path": "./data/bbh_qzp_data.hdf5",
      "scale_data": false,
      "data_output_type": "hphc",
      "split_size": 0.2,
      "sxs_sample_weight": 50 
    },
    "model":{
      "name": "RegularizedAutoEncoderGenerator",
      "args": {"test": true},
      "latent_dim": 10,
      "reg_weight": 0.01,
      "mapper_architecture": "dense",
      "loss": "mae",
      "mapper_dropout": 1e-7,
      "optimizer_kwargs":{
        "learning_rate": 0.0001
      }
    },
    "parametric_umap":{
        "n_neighbors": 20,
        "metric": "euclidean",
        "min_dist": 0.8,
        "steps_per_epoch": 100,
        "edge_dataset_batch_size": 2000,
        "edge_dataset_n_epochs": 200,
        "epochs": 5        
    },
    "trainer":{
      "name": "GWRegularizedAutoEncoderModelTrainer",
      "args": {},
      "num_epochs": 5000,
      "mapper_epochs": 5000,
      "generator_epochs": 5000,
      "batch_size": 50,
      "batch_size_test": 1024,
      "verbose_training": 1
    },
    "callbacks":{
      "checkpoint_monitor": "val_loss",
      "checkpoint_mode": "min",
      "checkpoint_save_best_only": true,
      "checkpoint_save_weights_only": true,
      "checkpoint_verbose": true,
      "tensorboard_write_graph": true,
      "early_stopping_patience": 61,
      "lr_reduce_factor": 0.2,
      "lr_reduce_patience": 15,
      "min_lr": 1e-11
    }
  }
